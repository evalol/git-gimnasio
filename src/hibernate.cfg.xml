<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/fitnesscenter</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <mapping resource="datos/Actividades.hbm.xml"/>
    <mapping resource="datos/Actividadestarifas.hbm.xml"/>
    <mapping resource="datos/HorariosActividades.hbm.xml"/>
    <mapping resource="datos/Provincias.hbm.xml"/>
    <mapping resource="datos/Tarifas.hbm.xml"/>
    <mapping resource="datos/Empleados.hbm.xml"/>
    <mapping resource="datos/Domicilios.hbm.xml"/>
    <mapping resource="datos/Clientes.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
